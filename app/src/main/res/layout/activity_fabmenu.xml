<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_gravity="center"
    android:layout_height="180dp"
    android:paddingRight="5dp"
    android:paddingLeft="13dp">

    <ImageView
        android:layout_width="124dp"
        android:layout_height="26dp"
        android:layout_centerInParent="true"
        android:src="@drawable/hashtextwhi" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/about"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:text="@string/version"
        android:textAlignment="center" />

     <android.support.v7.widget.CardView
         android:paddingLeft="5dp"
         app:cardBackgroundColor="#000000"
         android:foregroundGravity="center"
         app:cardCornerRadius="15dp"
         android:layout_width="300dp"
         android:layout_height="40dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentStart="true"
         android:layout_marginBottom="23dp">

         <RelativeLayout
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:layout_width="match_parent"
             android:layout_height="40dp">

             <Button
                 android:id="@+id/rate"

                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginStart="22dp"
                 android:background="@drawable/ratee"
                 />

             <Button
                 android:id="@+id/Instagram"

                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginStart="70dp"
                 android:background="@drawable/instagramlogo" />

             <Button
                 android:id="@+id/bug"

                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_alignParentTop="true"
                 android:layout_centerHorizontal="true"
                 android:background="@drawable/bug" />

             <Button
                 android:id="@+id/blog"

                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginEnd="69dp"
                 android:background="@drawable/web" />

             <Button
                 android:id="@+id/share"
                 android:layout_width="40dp"
                 android:layout_height="40dp"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginEnd="20dp"
                 android:background="@drawable/shaare" />
         </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>